<Page
    x:Class="Param_ItemNamespace.Views.ContentGridViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:Param_ItemNamespace.Models"
    xmlns:cm="using:Caliburn.Micro"
    mc:Ignorable="d">
    
    <controls:AdaptiveGridView
        ItemsSource="{x:Bind ViewModel.Source,Mode=OneWay}"
        cm:Message.Attach="[Event ItemClick] = [OnItemSelected($clickedItem)]"
        StretchContentForSingleRow="False"
        SelectionMode="None"
        IsItemClickEnabled="True"
        Padding="{StaticResource MediumLeftRightMargin}"
        DesiredWidth="180"
        ItemHeight="160">
        <controls:AdaptiveGridView.ItemTemplate>
            <DataTemplate x:DataType="models:SampleOrder">
                <Grid
                    Padding="{StaticResource XSmallLeftTopRightBottomMargin}"
                    Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <FontIcon                            
                            Glyph="{x:Bind Symbol}" />
                        <TextBlock
                            Margin="{StaticResource XXSmallTopMargin}"
                            HorizontalAlignment="Center"
                            Text="{x:Bind Company}"
                            Style="{ThemeResource BodyTextStyle}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </controls:AdaptiveGridView.ItemTemplate>
    </controls:AdaptiveGridView>
</Page>